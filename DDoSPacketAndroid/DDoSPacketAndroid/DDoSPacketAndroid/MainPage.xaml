<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:DDoSPacket"
             x:Class="DDoSPacket.MainPage">

    <StackLayout>
<Label Text="IP: " FontSize="Medium"/>
        <Editor x:Name="ip"/>
        <Label Text="Port: " FontSize="Medium"/>
        <Editor x:Name="port"/>
        <Label Text="Thread: " FontSize="Medium"/>
        <Editor x:Name="thread"/>
        <Label Text="Size MB (Max 50): " FontSize="Medium"/>
        <Editor x:Name="size"/>
        <Picker x:Name="NP" Title="Network Protocol" />
        <Label x:Name="amount" Text="Packet are send success: 0" FontSize="Medium"/>
        <Label x:Name="amountf" Text="Packet are send unsuccess: 0" FontSize="Medium"/>
        <Button Clicked="start" Text="Start" HorizontalOptions="Center"/>
        <Button Clicked="stop" Text="Exit (Stop)" HorizontalOptions="Center"/>
        <Button Clicked="INFO" Text="App Info" HorizontalOptions="Center"/>
    </StackLayout>

</ContentPage>
